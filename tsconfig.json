{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2015", "ESNext.WeakRef"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "target": "ES2015",
    "removeComments": false
  },
  "include": ["src/*"]
}
